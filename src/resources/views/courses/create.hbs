<div class="">
  <h3>Đăng khóa học</h3>
  <div class="container">
    <form method="POST" action="/courses/store">
      <div class="mb-3">
        <label class="form-label">Name</label>
        <input
          type="text"
          class="form-control"
          aria-describedby="emailHelp"
          name="name"
        />
      </div>
      <div class="mb-3">
        <label class="form-label">Description</label>
        <input
          type="text"
          class="form-control"
          aria-describedby="emailHelp"
          name="description"
        />
      </div>

      <button type="submit" class="btn btn-primary">Thêm khóa học</button>
    </form>
  </div>
</div>