<div class="mt-4">
  <h3 class="text-center">Edit Category</h3>

  <div class="container">
    <form method="POST" action="/admin/category/{{category._id}}?_method=PUT">
      <div class="mb-3">
        <label class="form-label">Name</label>
        <input
          type="text"
          class="form-control"
          aria-describedby="emailHelp"
          name="name"
          value="{{category.name}}"
        />
        {{#if error}}
          <div class="text-danger">{{error}}</div>
        {{/if}}
      </div>
      <button type="submit" class="btn btn-primary">Update</button>
    </form>
  </div>
</div>