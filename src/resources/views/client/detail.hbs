<div class="container">
  <div class="row">
    <div
      class=" text-bold text-center w-100 text-dark text-lg mt-5 display-4" 
    >Product Detail</div>
  </div>
  <div class="row py-5" style="min-height:700px;">
    <div class="col-lg-6">
      <img
        src="/{{product.image}}"
        class="img-thumbnail w-100 object-cover rounded"
        style="height:600px; object-fit:cover"
        alt=""
      />
    </div>
    <div class="col-lg-6">
        <h2 class="text-center text-uppercase font-weight-bold" style="font-size:30px">{{product.name}}</h2>
        <h4 style="font-size:20px">{{product.description}}</h4>
        <h3 class="text-capitalize font-weight-bold text-warning" style="font-size:28px">
            Price: <span class="text-capitalize font-weight-bold ml-2" style="font-size:28px">{{product.price}}$</span>
        </h4>
        <div class="row align-items-center">
        <p class="text-capitalize font-weight-bold">Quantity</p>
        <input type="number" min="0" max="10" value="1" style="width:40px; height: 35px;">
        </div>
        <div class="btn btn-danger w-100 py-3 mt-auto">Add to Cart</div>

    </div>
  </div>
</div>