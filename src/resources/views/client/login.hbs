
    <div class="container mt-5">
      <h2 class="text-center mb-5 font-weight-bold">Customer Login</h2>
      {{#if successMessage}}
       <div class="alert alert-success my-4">{{successMessage}}</div>
      {{/if}}
      {{#if errors}}
      <div class="alert alert-danger my-4">{{errors}}</div>
      {{/if}} 
      <form method="POST" action="/login">
        <div class="form-outline mb-4">
          <label class="form-label" for="form2Example1">username</label>
          <input
            id="form2Example1"
            class="form-control"
            type="text"
            name="username"
            value = {{oldData.username}}>

        <!-- Password input -->
        <div class="form-outline mb-4">
          <label class="form-label" for="form2Example2">Password</label>
          <input
            type="password"
            id="form2Example2"
            class="form-control"
            name="password"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>
      </form>
    </div>
</div>